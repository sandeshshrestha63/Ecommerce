@model IEnumerable<Ecommerce.Models.category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Category
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Products</li>
            <li class="active">Category</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <a href="@Url.Action("Create")" data-toggle="modal" class="btn btn-primary btn-sm btn-flat"><i class="fa fa-plus"></i> New</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Tools</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        using(Html.BeginForm("Delete","AdminCategory", new { id= item.id },FormMethod.Post))
                        {
                            <tr>
                                <td>@item.name</td>
                                <td>
                                    <a class='btn btn-success btn-sm edit btn-flat' href="@Url.Action("Edit", new { id = item.id })"><i class='fa fa-edit'></i> Edit</a>
                                    @*<button class='btn btn-danger btn-sm delete btn-flat' data-id='".$row[' id']."' onclick="return confirm('Are you sure you want to delete Category : @item.name')"><i class='fa fa-trash'></i> Delete</button>*@
                                    @*<button class="btn btn-danger btn-sm delete btn-flat" value="Delete" onclick="return confirm('Are you sure you want to delete category : @item.name')"><i class="fa fa-trash">Delete</i></button>*@
                                    <input type="submit" value="Delete"  class="btn btn-danger btn-sm" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </section>
</div>